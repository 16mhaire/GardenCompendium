<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenCompendium.UserPlantsList"
             Title="User Plant List">

    <CollectionView ItemsSource="{Binding UserPlants}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Horizontal" Padding="10">
                    <Image Source="{Binding ImageUrl}" WidthRequest="50" HeightRequest="50"/>
                    <StackLayout Orientation="Vertical" Padding="10">
                        <Label Text="{Binding Name}" FontSize="20" />
                        <Label Text="{Binding ScientificName[0]}" FontSize="14" />
                    </StackLayout>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>