<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenCompendium.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="garden_compendium_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Garden Compendium Logo WIP" />

            <Label
                Text="{Binding ZipCode}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Button 
                Text="Enter Zip Code"
                Clicked="OnNavigateToAddressEntryPageClicked" />

            <ListView x:Name="MyPlantsListView"
                      ItemsSource="{Binding Plants}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                                  Detail="{Binding ScientificName[0]}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
